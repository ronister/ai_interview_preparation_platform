{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn-start",
            "type": "shell",
            "command": "yarn",
            "args": ["start"],
            "options": {
                "env": {
                    "IS_EXECUTION_ENVIRONMENT": "false"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "yarn run",
                    "endsPattern": "(webpack compiled|compiled successfully)"
                }
            }
        }
    ]
} 